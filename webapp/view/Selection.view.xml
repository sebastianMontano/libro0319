<mvc:View
    controllerName="libro0319.libro0319.controller.Selection"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="pageSelection"
        title="{i18n>selectionTitle}"
        enableScrolling="true"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
    >
        <content>
            <Panel
                id="_IDGenPanel"
                headerText="{i18n>selectionHeader}"
                width="100%"
                class="sapUiNoContentPadding sapUiResponsiveContentPadding"
            >
                <f:SimpleForm
                    id="_IDGenSimpleForm"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="12"
                    labelSpanL="12"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="true"
                >
                    <!-- Sociedad -->
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>vh.sociedad}"
                    />
                    <Input
                        id="inpSociedad"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequest"
                        placeholder="{i18n>vh.sociedad}"
                        width="100%"
                    >
                        <customData>
                            <core:CustomData
                                key="vhType"
                                value="Sociedad"
                            />
                            <core:CustomData
                                key="field"
                                value="CompanyCode"
                            />
                        </customData>
                    </Input>
                    <!-- Ejercicio -->
                    <Label
                        id="_IDGenLabel6"
                        text="{i18n>lbl.ejercicio}"
                    />
                    <DatePicker
                        id="inpEjercicio"
                        displayFormat="yyyy"
                        valueFormat="yyyy"
                        placeholder="YYYY"
                        change=".onEjercicioChange"
                    />
                    <!-- Periodo -->
                    <Label
                        id="_IDGenLabel3"
                        text="{i18n>lbl.periodo}"
                    />
                    <Select
                        id="selPeriodo"
                        width="100%"
                        items="{modelMonths>/months}"
                    >
                        <core:Item
                            id="_IDGenItem"
                            key="{modelMonths>key}"
                            text="{modelMonths>text}"
                        />
                    </Select>
                    <!-- Oportunidad EEFF -->
                    <Label
                        id="_IDGenLabel5"
                        text="{i18n>lbl.oportunidadEEFF}"
                    />
                    <Select
                        id="selEEFF"
                        width="100%"
                        items="{modelOportunidadEEFF>/oportunidadEEFF}"
                    >
                        <core:Item
                            id="_IDGenItem1"
                            key="{modelOportunidadEEFF>key}"
                            text="{modelOportunidadEEFF>text}"
                        />
                    </Select>
                    <Label
                        id="_IDGenLabel4"
                        text="{i18n>lbl.activarMonedaUSD}"
                    />
                    <CheckBox
                        id="activarMonedaUSD"
                        text="Sí"
                    />
                    <Label
                        id="_IDGenLabel8"
                        text="{i18n>lbl.generarPLE}"
                    />
                    <CheckBox
                        id="generarPle"
                        text="Sí"
                    />
                </f:SimpleForm>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <Button
                    id="btnContinuar"
                    text="{i18n>btn.continuar}"
                    press=".onNavToLibro"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
